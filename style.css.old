=========================================== */ 
img {
    max-width: 100%;
}
.mountains {
    position: fixed;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: url(assets/img/banner1.jpg) 50% 100% no-repeat;
    background-size: cover;
}
.house-right {
    position: fixed;
    width: 62.76041667%;
    height: 60%;
    bottom: 0;
    right: 0;
    z-index: 30;
    background: url(assets/img/banner2.png) 100% 100% no-repeat;
    background-size: contain;
}
.house-left {
    position: fixed;
    width: 28.958333%;
    height: 59.16666666%;
    bottom: 0;
    left: 0;
    z-index: 20;
    background: url(assets/img/banner3.png) 0 100% no-repeat;
    background-size: contain;
}
.promo-zoom-titles {
    position: fixed;
    top: 30%;
    left: 20%;
    right: unset;
    z-index: 40;
    text-align: center;
}
.promo-about {
	background: url(assets/img/achieve2.png) 0 100% no-repeat;
	background-position: bottom;
	position: relative;
}
.promo-about .about {
	z-index: 1
}

/* FLOATER */
img.floater-plant-ach1 {
	content:'';
	position: absolute;
	left: 0;
	top: 100px;
	width: 280px;
}
img.floater-plant-ach2 {
	content:'';
	position: absolute;
	right: 0;
	top: 100px;
	width: 280px;
	-webkit-transform: scaleX(-1);
	-moz-transform: scaleX(-1);
	-o-transform: scaleX(-1);
	transform: scaleX(-1);
}


.clients { position: relative; }
img.floater-plant-partner {
	content:'';
	position: absolute;
	right: 0;
	bottom: -100px;
}
.partner-item {
    z-index: 1;
}
.partner-item img {
    opacity: 1; 
    transition: all .3s ease-in-out; 
}
.partner-space {
	padding: 10px 0;
	font-style: italic;
	font-weight: 700;
}
img.floater-plant-client {
	content:'';
	position: absolute;
	left: 0;
	bottom: -100px;
}

img.floater-plant-client-right {
	content:'';
	position: absolute;
	right: 0;
	top: -150px;
}

.projects {
	position: relative;
}
img.floater-plant-projects1 {
	content:'';
	position: absolute;
	left: 0;
	top: 0;
	width: 280px;
}
img.floater-plant-projects2 {
	content:'';
	position: absolute;
	right: 0;
	bottom: 0;
	width: 280px;
}

footer {
	background: url(assets/img/footer-grass.jpg) 0 100% no-repeat;
	background-position: bottom;
}

.service-item-title a, 
a .service-item-title {
	color: #b11d11;
}